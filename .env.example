# Runtime
NODE_ENV=production
BOT_CONFIG_PATH=config.yaml
LOG_LEVEL=info

# Safety mode
SHADOW_MODE=true
LIVE_TRADING_ENABLED=false

# Key decryption (required only for live mode)
KEY_ENCRYPTION_PASSWORD=replace_with_strong_password
ENCRYPTED_KEY_PATH=storage/secrets/key.enc
WALLET_PUBLIC_KEY=
ALLOW_UNENCRYPTED_DEV_KEY=false
DEV_PRIVATE_KEY=

# Network / RPC failover (comma-separated)
RPC_ENDPOINTS=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY,https://api.mainnet-beta.solana.com
JUPITER_BASE_URL=https://lite-api.jup.ag
JUPITER_API_KEY=

# Telegram controls
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Storage overrides (optional)
DB_PATH=storage/runtime/trading.sqlite
BACKUPS_DIR=storage/backups
REPORTS_DIR=storage/reports
HEALTH_FILE=storage/runtime/health.json
